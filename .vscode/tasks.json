{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src flash",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "flash and monitor",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src flash monitor",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["absolute"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src clean",
            "problemMatcher": []
        },
        {
            "label": "menuconfig",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src menuconfig",
            "problemMatcher": []
        },
        {
            "label": "size",
            "type": "shell",
            "command": "idf.py -C ${workspaceFolder}/src size",
            "problemMatcher": []
        }
    ]
}
